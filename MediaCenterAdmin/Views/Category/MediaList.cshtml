@model IEnumerable<MediaCenterCore.ViewModels.MediaListVM>

@{
    ViewData["Title"] = (ViewData["Category"] ?? "");
}

<h1>@ViewData["Category"]</h1>

<p>
    <a asp-controller="Media" asp-action="Add" asp-route-CategoryId="@this.ViewData["CategoryId"]">Add new to @ViewData["Category"]</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quality)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Actors)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img style="max-height:100px" src=" @Html.DisplayFor(modelItem => item.Image)">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quality)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Actors)
                </td>
            <td>
                <a asp-controller="media" asp-action="Details" asp-route-id="@item.Id">View</a> |
                <a asp-controller="media" asp-action="Edit" asp-route-id="@item.Id">Edit</a> 
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="Index">Back to List</a>
</div>